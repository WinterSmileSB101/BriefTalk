<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.CardLearnFragment">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/rootPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWrite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/srcPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/srcText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textAlignment="gravity"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/usPanel"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/audio_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_audio_red"/>

                    <TextView
                        android:id="@+id/text_us"
                        android:textColor="@color/colorSlateGray"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:textAlignment="gravity"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ukPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/audio_uk"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_audio_red"/>

                    <TextView
                        android:id="@+id/text_uk"
                        android:textColor="@color/colorSlateGray"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:textAlignment="gravity"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/meanPanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/menText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>