<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.alvin.smilesb101.brieftalk.Bean.LaiFuDaoJoke"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWrite"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <com.alvin.smilesb101.brieftalk.View.CustomView.RoundImageView
                android:src="@mipmap/laifudao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/itemTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:text="来福岛"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>


        <!--下半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/contentImage"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@{item.poster}"
                android:scaleType="fitXY"
                android:visibility="@{item.poster!=null?View.VISIBLE:View.GONE}"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>